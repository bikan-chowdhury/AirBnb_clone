<% layout("/layouts/boilerplate") %>
<form class="form needs-validation" action="/listings/<%= listing._id %>?_method=PUT" method="POST" novalidate enctype="multipart/form-data">
  <h2>Edit Listing</h2>
  <label for="title">Title</label>
  <input type="text" id="title" name="listing[title]" value="<%= listing.title %>" class="form-control" />

  <label for="description">Description</label>
  <textarea id="description" name="listing[description]" rows="4" required>
<%= listing.description %></textarea>

    <div class="mb-3">
      <label for="">Previous Image: </label>
      <img src="<%= originalImgUrl %>" style="width:100%; height:auto;">
    </div>
  <label for="image">Upload New Image</label>
  <input type="file" id="image" name="listing[image]" class="form-control" />


  <label for="price">Price</label>
  <input type="number" id="price" name="listing[price]" step="0.01" value="<%= listing.price %>" required class="form-control" />

  <label for="location">Location</label>
  <input type="text" id="location" name="listing[location]" value="<%= listing.location %>" required class="form-control" />

  <label for="country">Country</label>
  <input type="text" id="country" name="listing[country]" value="<%= listing.country %>" required class="form-control">
  </input>
  <br>
  <button type="submit">Submit</button>
</form>