<% layout("/layouts/boilerplate") %>

<div class="card" style="width: 60%; margin: 0 auto;">
  <h3 class="card-title" style="font-weight: 800"><%= listing.title %></h3>
  <p style="color: gray">
    <i>
      @<%= listing.owner.username %>
  </p>
  </i>
  <br />
  <img src="<%= listing.image.url %>" class="card-img-top" alt="..." />
  <div class="card-body">
    <br />
    <p class="card-text"><%= listing.description %></p>
    <p class="price-sh">&#8377; <%= listing.price.toLocaleString("en-IN") %></p>

    <p>Location: <%= listing.location %></p>
    <p>Country: <%= listing.country %></p>

    <% if (currentUser && currentUser._id.equals(listing.owner._id)) { %>
    <div class="btns1">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary btn-edit">Edit Info</a>
      <br />
      <br />
      <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
        <button class="btn btn-primary btn-delete">Delete</button>
      </form>
    </div>
    <% } %>

    <% if(currentUser){ %>
    <hr />
    <div>
      <h1>Leave a review</h1>
      <form action="/listings/<%= listing._id %>/reviews" method="POST" class="needs-validation" novalidate>
        <br>

        <fieldset class="starability-fade">
          <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
          <input type="radio" id="first-rate1" name="review[rating]" value="1" />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input type="radio" id="first-rate2" name="review[rating]" value="2" />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="review[rating]" value="3" />
          <label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="review[rating]" value="4" />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="review[rating]" value="5" />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>

        <label for="comment">Comment</label>
        <textarea name="review[comment]" id="comment" rows="6" cols="30" required class="form-control" placeholder="Shear your experience with us."></textarea>
        <div class="invalid-feedback">Please add some comments for review.</div>
        <br />
        <button class="btn btn-primary">Submit</button>
      </form>
    </div>
    <% } %>

    <hr />
    <h4>All Reviews</h4>
    <div class="show-reviews">
      <% for(review of listing.reviews){%>
      <div class="review-card">
        <div class="review-header">
          <h3 class="review-username">@<%= review.author.username %></h3>
        </div>
        <p class="starability-result" data-rating="<%= review.rating %>">
          Rated: 3 stars
        </p>
        <p class="review-comment"><%= review.comment %></p>

        <form action="/listings/<%=listing._id%>/reviews/<%= review._id %>?_method=DELETE" method="post">
          <button class="dlt-icon">
            <i class="fa fa-trash" aria-hidden="true"></i>
          </button>
        </form>
      </div>
      <%} %>
    </div>
  </div>
</div>